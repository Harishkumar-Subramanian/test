{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^values\\.yaml$"],
      "matchStrings": ["targetRevision: (?<currentValue>.*?)\\n"],
      "depNameTemplate": "helm/ttc-standard-app",
      "datasourceTemplate": "helm"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["helm"],
      "packagePatterns": ["^helm$"],
      "registryUrls": ["https://trimbletransportationcloud.azurecr.io"]
    }
  ],
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "trimbletransportationcloud.azurecr.io",
      "username": "{{ env.OCI_REGISTRY_USERNAME }}",
      "password": "{{ env.OCI_REGISTRY_PASSWORD }}"
    }
  ]
}

