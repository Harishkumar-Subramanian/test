{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^apps/.*/.*/values\\.yaml$"],
      "datasourceTemplate": "custom.helm",
      "depNameTemplate": "helm/ttc-standard-app",
      "matchStrings": [
        "^helm:\\s*targetRevision:\\s*(?<currentValue>.*)$"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "customDatasources": {
    "helm": {
      "defaultRegistryUrlTemplate": "https://trimbletransportationcloud.azurecr.io"
    }
  }
}
